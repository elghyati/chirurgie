{% extends 'admin/base.html.twig' %}

{% block title %}Fiche {{ brand.libelle }} {% endblock %}

{% block body %}
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-12">
                    <div class="page-title-box">
                        <h4 class="page-title">Administration des marques</h4>
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="{{ path('admin_dashboard_index') }}">ChirurgieMed</a></li>
                            <li class="breadcrumb-item"><a href="{{ path('admin_brand_index') }}">Marque</a></li>
                            <li class="breadcrumb-item active">Consultation</li>
                        </ol>
                    </div>
                </div>
            </div>
            <!-- end row -->
            <div class="page-content-wrapper">
                <div class="row">
                    <div class="col-12">
                        <div class="card m-b-20">
                            <div class="card-body">
                                <h4 class="mb-3 header-title">Fiche de '{{ brand.id }}'</h4>
                                <table class="table my-5">
                                    <tbody>
                                        {#<tr>
                                            <th>ID</th>
                                            <td>{{ brand.id }}</td>
                                        </tr>#}
                                        <tr>
                                            <th>Marque</th>
                                            <td>{{ brand.libelle }}</td>
                                        </tr>
                                        <tr>
                                            <th>Image</th>
                                            <td><img src="{{ asset('uploads/images/brands/' ~ brand.logo) }}" class="img-thumbnail rounded shadow"/></td>
                                        </tr>
                                    </tbody>
                                </table>
                                <div class="form-inline align-items-lg-center my-3">
                                    <a class="btn btn-success mr-3" href="{{ path('admin_brand_index') }}"><i class="fas fa-chevron-left"></i> Retour Ã  la liste</a>
                                    <a class="btn btn-danger mr-3" href="{{ path('admin_brand_edit', {'id': brand.id}) }}"><i class="fas fa-pencil-alt"></i> Modifier</a>
                                    {#                                    {{ include('admin/sous_famille/__delete_form.html.twig') }}#}
                                </div>
                            </div>
                        </div>
                    </div> <!-- end col -->
                </div> <!-- end row -->
            </div>
            <!-- end page content-->
        </div> <!-- container-fluid -->
    </div> <!-- content -->
{% endblock %}
