{% extends 'admin/base.html.twig' %}

{% block title %}Fiche {{ size.size }} {% endblock %}

{% block body %}
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-12">
                    <div class="page-title-box">
                        <h4 class="page-title">Administration des tailles</h4>
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="{{ path('admin_dashboard_index') }}">ChirurgieMed</a></li>
                            <li class="breadcrumb-item"><a href="{{ path('admin_size_index') }}">Tailles</a></li>
                            <li class="breadcrumb-item active">Consultation</li>
                        </ol>
                    </div>
                </div>
            </div>
            <!-- end row -->
            <div class="page-content-wrapper">
                <div class="row">
                    <div class="col-12">
                        <div class="card m-b-20">
                            <div class="card-body">
                                <h4 class="mb-3 header-title">Fiche de '{{ size.size }}'</h4>
                                <table class="table my-5">
                                    <tbody>
                                        <tr>
                                            {# 
                                            Doesn't work on chrome
                                              <th class="col-4">ID</th>
                                              <td class="col-8">{{ size.id }}</td>
                                            #}  
                                            <th>ID</th>
                                            <td>{{ size.id }}</td>
                                        </tr>
                                        <tr>
                                            <th>Nom de la taille</th>
                                            <td>{{ size.size }}</td>
                                        </tr>
                                    </tbody>
                                </table>
                                <div class="form-inline align-items-lg-center my-3">
                                    <a class="btn btn-success mr-3" href="{{ path('admin_size_index') }}"><i class="fas fa-chevron-left"></i> Retour Ã  la liste</a>
                                    <a class="btn btn-danger mr-3" href="{{ path('admin_size_edit', {'id': size.id}) }}"><i class="fas fa-pencil-alt"></i> Modifier</a>
                                    {#                                    {{ include('admin/size/__delete_form.html.twig') }}#}
                                </div>
                            </div>
                        </div>
                    </div> <!-- end col -->
                </div> <!-- end row -->
            </div>
            <!-- end page content-->
        </div> <!-- container-fluid -->
    </div> <!-- content -->
{% endblock %}

