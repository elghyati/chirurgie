{% extends 'admin/base.html.twig' %}

{% block title %}Liste des couleurs{% endblock %}

{% block body %}

    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-12">
                    <div class="page-title-box">
                        <h4 class="page-title">Administration des articles</h4>
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="{{ path('admin_dashboard_index') }}">ChirurgieMed</a></li>
                            <li class="breadcrumb-item active">Couleurs</li>
                        </ol>
                    </div>
                </div>
            </div>
            <!-- end row -->

            <div class="page-content-wrapper">
                <div class="row">
                    <div class="col-12">
                        <div class="card m-b-20">
                            <div class="card-body">

                                <h4 class="mt-0 header-title">Liste des couleur</h4>


                                <table id="datatable-buttons" class="table table-striped dt-responsive table-hover nowrap"  style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                                    <thead>
                                        <tr>
                                            <th  class="text-right">ID</th>
                                            <th class="text-center">Libellé</th>
                                            <th class="text-center">Couleur</th>
                                            <th class="text-center">actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for color in colors %}
                                            <tr>
                                                <td class="text-right">{{ color.id }}</td>
                                                <td>{{ color.name }}</td>
                                                {#                                                <td>{{ color.hex }}</td>#}
                                                <td class="text-center"><div class="btn mx-auto " style="background-color:{{ color.hex }}; color:{{ color.hex }}; width: 130px; cursor: default">{{ color.hex }}</div></td>
                                                <td>
                                                    <div class="form-inline justify-content-center">
                                                        <a href="{{ path('admin_color_show', {'id': color.id}) }}" class="btn btn-primary mr-2" data-toggle="tooltip" data-placement="top" title data-original-title="Détails" ><i class="fas fa-eye"></i>  </a>
                                                        <a href="{{ path('admin_color_edit', {'id': color.id}) }}" class="btn btn-primary mr-2" data-toggle="tooltip" data-placement="top" title data-original-title="Modifier"><i class="fas fa-pencil-alt"></i>  </a>
                                                    </div> 
                                                </td>
                                            </tr>
                                        {% else %}
                                            <tr>
                                                <td colspan="7">Aucune couleur n'est enregistré</td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>

                            </div>
                        </div>
                    </div> <!-- end col -->
                </div> <!-- end row -->
            </div>
            <!-- end page content-->
            <div class="form-inline align-items-lg-center my-3">
                <a class="btn btn-success mr-3" href="{{ path('admin_color_new') }}"><i class="fas fa-plus"></i> Ajouter une couleur</a>
            </div>           
        </div> <!-- container-fluid -->
    </div> <!-- content -->
{% endblock %}
