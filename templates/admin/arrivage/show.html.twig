{% extends 'admin/base.html.twig' %}

{% block title %}Fiche d'élément  {{ arrival.position }} {% endblock %}

{% block body %}
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-12">
                    <div class="page-title-box">
                        <h4 class="page-title">Administration des éléments d'arrivage</h4>
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="{{ path('admin_dashboard_index') }}">ChirurgieMed</a></li>
                            <li class="breadcrumb-item"><a href="{{ path('admin_arrivage_index') }}">Les éléments d'arrivages</a></li>
                            <li class="breadcrumb-item active">Consultation</li>
                        </ol>
                    </div>
                </div>
            </div>
            <!-- end row -->
            <div class="page-content-wrapper">
                <div class="row">
                    <div class="col-12">
                        <div class="card m-b-20">
                            <div class="card-body">
                                <h4 class="mb-3 header-title">Fiche d'élément '{{ arrival.position }}'</h4>
                                <table class="table my-5">
                                    <tbody>
                                        <tr>
                                            <th>ID</th>
                                            <td>{{ arrival.id }}</td>
                                        </tr>
                                        <tr>
                                            <th>Position d'élément  </th>
                                            <td>{{ arrival.position }}</td>
                                        </tr>
                                        <tr>
                                            <th>Image</th>
                                            <td><img src="{{ asset('uploads/images/arrivages/' ~ arrival.image) }}" class="img-thumbnail rounded shadow"/></td>
                                        </tr>
                                    </tbody>
                                </table>
                                <div class="form-inline align-items-lg-center my-3">
                                    <a class="btn btn-success mr-3" href="{{ path('admin_arrivage_index') }}"><i class="fas fa-chevron-left"></i> Retour à la liste</a>
                                    <a class="btn btn-danger mr-3" href="{{ path('admin_arrivage_edit', {'id': arrival.id}) }}"><i class="fas fa-pencil-alt"></i> Modifier</a>
{#                                    {{ include('admin/famille/__delete_form.html.twig') }}#}
                                </div>
                            </div>
                        </div>
                    </div> <!-- end col -->
                </div> <!-- end row -->
            </div>
            <!-- end page content-->
        </div> <!-- container-fluid -->
    </div> <!-- content -->
{% endblock %}