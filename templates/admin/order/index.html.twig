{% extends 'admin/base.html.twig' %}

{% block title %}Hello OrderController!{% endblock %}

{% block body %}

    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-12">
                    <div class="page-title-box">
                        <h4 class="page-title">Gestion des commandes</h4>
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="{{ path('admin_dashboard_index') }}">ChirurgieMed</a></li>
                            <li class="breadcrumb-item active">Commandes</li>
                        </ol>
                    </div>
                </div>
            </div>
            <!-- end row -->

            <div class="page-content-wrapper">
                <div class="row">
                    <div class="col-12">
                        <div class="card m-b-20">
                            <div class="card-body">



                                <h4 class="mt-0 header-title">Liste des commandes</h4>
                                <table id="datatable-buttons" class="table table-striped dt-responsive table-hover nowrap"  style="border-collapse: collapse; border-spacing: 0; width: 100%;">

                                    <thead class="table-dark">
                                    <th>ID</th>
                                    <th>Référence</th>
                                    <th>Montant</th>
                                    <th>Statut</th>
                                    <th>Date</th>
                                    <th>Date màj</th>
                                    <th>Client</th>
                                    <th></th>
                                    </thead>
                                    <tbody>

                                        {% for order in orders %}
                                            <tr border-bottom>
                                                <td> {{ order.id }}</td>
                                                <td> {{ order.reference }}</td>
                                                <td> {{ order.amount }}</td>
                                                <td> {{ order.status.libstatus }}</td> 
                                                <td> {{ order.createdAt | date('d/m/Y H:i:s')}}</td>
                                                <td> {{ order.updatedAt | date('d/m/Y H:i:s') }}</td>
                                                <td> {{ order.customer.fullName }}</td>



                                                <td class="ali">
                                                    <div class="form-inline justify-content-center">
                                                        <a href="{{ path('admin_order_show', {'id': order.id}) }}" class="btn btn-primary mr-2" data-toggle="tooltip" data-placement="top" title data-original-title="Détails" ><i class="fas fa-eye"></i>  </a>
                                                        <a href="{{ path('admin_order_edit', {'id': order.id}) }}" class="btn btn-primary mr-2" data-toggle="tooltip" data-placement="top" title data-original-title="Modifier"><i class="fas fa-pencil-alt"></i>  </a>
                                                    </div> 
                                                </td>


                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div> <!-- end col -->
                </div> <!-- end row -->
            </div>
            <!-- end page content-->
            <div class="form-inline align-items-lg-center my-3">
                <a class="btn btn-success mr-3" href="{{ path('admin_order_new') }}"><i class="fas fa-plus"></i> Ajouter une commande</a>
 

        </div> <!-- container-fluid -->
    </div> <!-- content -->

{% endblock %}
