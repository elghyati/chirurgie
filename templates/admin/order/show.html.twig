{% extends 'admin/base.html.twig' %}

{% block title %}Commande{% endblock %}

{% block body %}
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-12">
                    <div class="page-title-box">
                        <h4 class="page-title">Administration des commandes </h4>
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="{{ path('admin_dashboard_index') }}">ChirurgieMed</a></li>
                            <li class="breadcrumb-item"><a href="{{ path('admin_famille_index') }}">Familles</a></li>
                            <li class="breadcrumb-item active">Consultation</li>
                        </ol>
                    </div>
                </div>
            </div>
            <!-- end row -->
            <div class="page-content-wrapper">
                <div class="row">
                    <div class="col-12">
                        <div class="card m-b-20">
                            <div class="card-body">
                                <h4 class="mb-3 header-title">Fiche de '{{ order.reference }}'</h4>





                                <table class="table my-5">
                                    <tbody>
                                        {% for orderdetail in order.getOrderDetails() %}
                                            <tr>
                                                <th>Quantité</th>
                                                <td>{{ orderdetail.quantity }}</td>
                                            </tr>
                                            <tr>
                                                <th>Désignation</th>
                                                <td>{{ orderdetail.article.designation }}</td>
                                            </tr>
                                            <tr>
                                                <th>Prix unitaire</th>
                                                <td>{{ orderdetail.price }}</td>
                                            </tr>
                                            <tr>
                                                <th>Montant</th>
                                                <td>{{ orderdetail.subTotal}}</td>
                                            </tr>
                                            <tr>
                                                <th>Prix unitaire</th>
                                                <td>{{ orderdetail.sequence }}</td>
                                            </tr>
                                        {% endfor %}

                                    </tbody>
                                </table>
                                <div class="form-inline align-items-lg-center my-3">
                                    <a class="btn btn-success mr-3" href="{{ path('admin_order_index') }}"><i class="fas fa-chevron-left"></i> Retour à la liste</a>
                                    <a class="btn btn-danger mr-3" href="{{ path('admin_order_edit', {'id': order.id}) }}"><i class="fas fa-pencil-alt"></i> Modifier</a>
                                    {#                                    {{ include('admin/article/__delete_form.html.twig') }}#}
                                </div>
                            </div>
                        </div>
                    </div> <!-- end col -->
                </div> <!-- end row -->
            </div>
            <!-- end page content-->
        </div> <!-- container-fluid -->
    </div> <!-- content -->
{% endblock %}
