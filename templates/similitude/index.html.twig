{% extends 'base_admin.html.twig' %}

{% block title %}Liste des similitudes!{% endblock %}

{% block body %}
    <div>
        <h1 class="">Liste des similitudes</h1>
    </div>
    <hr />
    <p class="badge-danger">En cours de conception</p>
    <br />
    <div class="table-responsive">
        {#        <table class="table  table-striped  table-hover">#}
        <table class="table  table-hover">
            <thead class="table-dark">
            <th>ID</th>
            <th>Similitude</th>
            <th></th>
            </thead>
            <tbody>

                {% for similitude in similitudes %}
                    <tr border-bottom>
                        <td> {{ similitude.id }}</td>
                        <td> {{ similitude.Similitude }}</td>
                        <td>
                            <a class="btn btn-primary" href="{{ path('similitude_edit', {id: similitude.id}) }}">edit</a>
                            <a class="btn btn-danger" href="{{ path('similitude_delete', {id: similitude.id}) }}">delete</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        <a class="btn btn-success" href="{{ path('similitude_create') }}" style="margin-top: 15px;">Ajout famille</a>

    </div>
{% endblock %}
