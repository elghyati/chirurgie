{% extends 'base.html.twig' %}

{% block title %}Autentification{% endblock %}

{% block body %}

    <!-- Start All Title Box -->
    <div class="all-title-box">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h2>Connexion au site</h2>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="{{ path('home_index') }}">Home</a></li>
                        <li class="breadcrumb-item active"> Connexion </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- End All Title Box --> 

    <!-- Start Login Form  -->
    <div class="contact-box-main">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-sm-12">
                    <div class="contact-form-right">
                        <h2>Authentification</h2>
                        {% if hasError %}
                            <div class="alert alert-danger">Une erreur est survenue, le login ou le mot de passe est invalide</div>
                        {% endif %}                        
                        <form {#action="{{ path('user_login') }}"#} method="post">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <input type="text" id="username" class="form-control" placeholder="Adresse email..." name="_username" required data-error="Veuillez saisir votre email" value="{{ username }}">
                                        <div class="help-block with-errors"></div>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <input type="password" class="form-control" id="userpassword" placeholder="Mot de passe..." name="_password" data-error="Veuillez saisir votre mot de passe" required="true">
                                        <div class="help-block with-errors"></div>
                                    </div>
                                </div>
                                <button class="btn btn-primary w-md waves-effect waves-light" type="submit"><i class="fas fa-lock-open"></i>  Connexion !</button>

                                {# <div class="submit-button text-center">
                                    <button class="btn hvr-hover" id="submit" type="submit">Connexion !</button>
                                    <div id="msgSubmit" class="h3 text-center hidden"></div>
                                    <div class="clearfix"></div>
                                </div> #}
                            </div>
                    </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- End Login Form --> 

