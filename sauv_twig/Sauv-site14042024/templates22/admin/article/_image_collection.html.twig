{% block _admin_article_images_widget %}
    {{ form_widget (form) }}
    <input type="hidden" id="widgets-images-counter" value="0">
    <div class="form-group">
        <button type="button" id="add-image" class="btn btn-primary"><i class="fa fa-plus"></i> Ajouter une image</button>        
    </div>
{% endblock %}

{% block _admin_article_images_entry_row %}
    <div class="form-group" id="block_{{id}}">
        {{ form_widget (form) }}
    </div>
{% endblock %}
{% block _admin_article_images_entry_widget %}
    <div class="row mb-3">
        <div class="col-4">
            {#
            {% if value %}
                <img src="{{ asset('uploads/thumbnails/')~value.url }}" class="img-fluid">
            {% endif %}
            #}
            {#            {{ form_widget(form.url) }}#}
            {{ form_widget(form.imageFile) }}
            {{ form_errors(form.imageFile) }}
        </div>
        <div class="col-6">
            {{ form_widget(form.caption) }}
            {{ form_errors(form.caption) }}
        </div>
        <div class="col">
            <button type="button" data-action="delete" data-target="#block_{{id}}"  class="btn btn-danger"><i class="fas fa-trash"></i></button>        
        </div>
    </div>
{% endblock %}