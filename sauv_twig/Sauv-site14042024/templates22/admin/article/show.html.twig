{% extends 'admin/base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-12">
                    <div class="page-title-box">
                        <h4 class="page-title">Administration des articles</h4>
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="{{ path('admin_dashboard_index') }}">ChirurgieMed</a></li>
                            <li class="breadcrumb-item"><a href="{{ path('admin_famille_index') }}">Familles</a></li>
                            <li class="breadcrumb-item active">Consultation</li>
                        </ol>
                    </div>
                </div>
            </div>
            <!-- end row -->
            <div class="page-content-wrapper">
                <div class="row">
                    <div class="col-12">
                        <div class="card m-b-20">
                            <div class="card-body">
                                <h4 class="mb-3 header-title">Fiche de '{{ article.designation }}'</h4>

                                <table class="table my-5">
                                    <tbody>
                                        <tr>
                                            <th>ID</th>
                                            <td>{{ article.id }}</td>
                                        </tr>
                                        <tr>
                                            <th>Référence</th>
                                            <td>{{ article.reference }}</td>
                                        </tr>
                                        <tr>
                                            <th>Désignation</th>
                                            <td>{{ article.designation }}</td>
                                        </tr>
                                        <tr>
                                            <th>Sous-famille</th>
                                            <td>{{ article.sousFamille }}</td>
                                        </tr>
                                        <tr>
                                            <th>Déscription</th>
                                            <td>{{ article.description | raw }}</td>
                                        </tr>
                                        <tr>
                                            <th>Prix unitaire</th>
                                            <td>{{ article.price }}</td>
                                        </tr>
                                        <tr>
                                            <th>Image principale</th>
                                            <td><img src="{{ asset('uploads/images/articles/' ~ article.coverImage) }}" class="img-thumbnail rounded shadow"/></td>
                                        </tr>
                                        <tr>
{#                                            <th>Images supplémentaires ({{ article.images | length }})</th>#}
                                            <th>Images supplémentaires</th>
                                            <td>
                                                {% for img in article.images %}
                                                    <img src="{{ asset('uploads/images/articles/' ~ img) }}" class="img-thumbnail rounded shadow"/>
                                                {% endfor %}
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                                <div class="form-inline align-items-lg-center my-3">
                                    <a class="btn btn-success mr-3" href="{{ path('admin_article_index') }}"><i class="fas fa-chevron-left"></i> Retour à la liste</a>
                                    <a class="btn btn-danger mr-3" href="{{ path('admin_article_edit', {'id': article.id}) }}"><i class="fas fa-pencil-alt"></i> Modifier</a>
                                    {#                                    {{ include('admin/article/__delete_form.html.twig') }}#}
                                </div>
                            </div>
                        </div>
                    </div> <!-- end col -->
                </div> <!-- end row -->
            </div>
            <!-- end page content-->
        </div> <!-- container-fluid -->
    </div> <!-- content -->
{% endblock %}
