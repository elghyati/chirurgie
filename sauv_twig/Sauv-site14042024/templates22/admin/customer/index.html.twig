{% extends 'admin/base.html.twig' %}

{% block title %}Liste des clients{% endblock %}

{% block body %}
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-12">
                    <div class="page-title-box">
                        <h4 class="page-title">Administration des clients</h4>
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="{{ path('admin_dashboard_index') }}">ChirurgieMed</a></li>
                            <li class="breadcrumb-item active">Clients</li>
                        </ol>
                    </div>
                </div>
            </div>
            <!-- end row -->

            <div class="page-content-wrapper">
                <div class="row">
                    <div class="col-12">
                        <div class="card m-b-20">
                            <div class="card-body">

                                <h4 class="mt-0 header-title">Liste des clients</h4>

                                <table id="datatable-buttons" class="table table-striped dt-responsive table-hover nowrap"  style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                                {#                                            <th>Avatar</th>#}
                                                {#<th>Civilité</th>#}
                                                {# <th>Prénom</th>#}
                                            <th>Nom</th>
                                            <th>E-mail</th>
                                                {# <th>Hash</th>#}
                                                {# <th>Introduction</th>#}
                                                {# <th>Slug</th>#}
                                                {#<th>Profession</th>#}
                                            <th>Société</th>
                                                {# <th>Adresse</th>#}
                                            <th>Ville</th>
                                            <th>Type</th>
                                                {# <th>Code Postal</th>#}
                                            <th>Tel</th>
                                            <th>GSM</th>
                                            <th>Actif</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for customer in customers %}
                                            <tr>
                                                <td>{{ customer.id }}</td>
                                                {#<td>{{ customer.picture }}</td>#}
                                                {#<td><img src="{{ asset('uploads/images/customers/' ~ customer.picture) }}" /> </td>#}
                                                {#<td>{{ customer.civilite }}</td>#}
                                                {# <td>{{ customer.firstName }}</td>#}
                                                {# <td>{{ customer.lastName }}</td>#}
                                                <td>{{ customer.fullName }}</td>
                                                <td>{{ customer.email }}</td>
                                                {# <td>{{ customer.hash }}</td>#}
                                                {# <td>{{ customer.introduction }}</td>#}
                                                {# <td>{{ customer.slug }}</td>#}
                                                {#<td>{{ customer.job }}</td>#}
                                                <td>{{ customer.company }}</td>
                                                {# <td>{{ customer.adresse }}</td>#}
                                                <td>{{ customer.ville }}</td>
                                                <td>{{ customer.customerType == 'DLR'?'Revenendeur':customer.customerType == 'PRF'?'Professionnel':'Particulier'}}</td>
                                                {# <td>{{ customer.codePostal }}</td>#}
                                                {# <td>{{ customer.enabled ? 'Yes' : 'No' }}</td> #}
                                                <td>{{ customer.tel }}</td>
                                                <td>{{ customer.gsm }}</td>
                                                <td>
                                                    <input type="checkbox" id="switch{{ customer.id }}" switch="success" disabled="true" {{ customer.enabled ? 'checked' : 'unchecked' }} />
                                                    <label for="switch{{ customer.id }}" data-on-label="" data-off-label=""></label>
                                                </td>
                                                <td>
                                                    <a href="{{ path('admin_customer_show', {'id': customer.id}) }}" class="btn btn-primary mr-2" data-toggle="tooltip" data-placement="top" title data-original-title="Détails" ><i class="fas fa-eye"></i> </a>
                                                    <a href="{{ path('admin_customer_edit', {'id': customer.id}) }}" class="btn btn-primary mr-2" data-toggle="tooltip" data-placement="top" title data-original-title="Modifier"><i class="fas fa-pencil-alt"></i> </a>
                                                </td>
                                            </tr>
                                        {% else %}
                                            <tr>
                                                <td colspan="18">Aucun client n'est enregistré</td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div> <!-- end col -->
                </div> <!-- end row -->
            </div>
            <!-- end page content-->
            <div class="form-inline align-items-lg-center my-3">
                <a class="btn btn-success mr-3" href="{{ path('admin_customer_new') }}"><i class="fas fa-plus"></i> Ajouter un client</a>
            </div>           
        </div> <!-- container-fluid -->
    </div> <!-- content -->

{% endblock %}
