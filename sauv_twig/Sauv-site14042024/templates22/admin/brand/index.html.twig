{% extends 'admin/base.html.twig' %}

{% block title %}Marques{% endblock %}

{% block body %}

    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-12">
                    <div class="page-title-box">
                        <h4 class="page-title">Gestion des marques</h4>
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="{{ path('admin_dashboard_index') }}">ChirurgieMed</a></li>
                            <li class="breadcrumb-item active">Marque</li>
                        </ol>
                    </div>
                </div>
            </div>
            <!-- end row -->

            <div class="page-content-wrapper">
                <div class="row">
                    <div class="col-12">
                        <div class="card m-b-20">
                            <div class="card-body">



                                <h4 class="mt-0 header-title">Liste des marques</h4>
                                <table id="datatable-buttons" class="table table-striped dt-responsive table-hover nowrap"  style="border-collapse: collapse; border-spacing: 0; width: 100%;">

                                    <thead class="table-dark">
                                        <tr>
                                            <th>Marque</th>
                                            <th>Logo</th>
                                            <th>Famille</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        {% for brand in brands %}
                                            <tr border-bottom>
                                                <td> {{ brand.libelle }}</td>
                                                {#                                                <td> {{ brand.logo }}</td>#}
                                                <td><img src="{{ asset('uploads/images/brands/' ~ brand.logo) }}" class="rounded shadow" style="height: 65px;" /></td>

                                                <td>{{ brand.famille }}</td>


                                                <td>
                                                    <div class="form-inline  align-items-lg-center">
                                                        <a href="{{ path('admin_brand_show', {'id': brand.id}) }}" class="btn btn-primary mr-2" data-toggle="tooltip" data-placement="top" title data-original-title="DÃ©tails" ><i class="fas fa-eye"></i>  </a>
                                                        <a href="{{ path('admin_brand_edit', {'id': brand.id}) }}" class="btn btn-primary mr-2" data-toggle="tooltip" data-placement="top" title data-original-title="Modifier"><i class="fas fa-edit"></i>  </a>
                                                    </div>
                                                </td>


                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div> <!-- end col -->
                </div> <!-- end row -->
            </div>
            <!-- end page content-->
            <div class="form-inline align-items-lg-center my-3">
                <a class="btn btn-success mr-3" href="{{ path('admin_brand_new') }}"><i class="fas fa-plus"></i> Ajouter une marque</a>


            </div> <!-- container-fluid -->
        </div> <!-- content -->
    {% endblock %}
