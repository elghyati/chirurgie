{% extends 'admin/base.html.twig' %}

{% block title %}Liste des utilisateurs{% endblock %}

{% block body %}
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-12">
                    <div class="page-title-box">
                        <h4 class="page-title">Administration des utilisateurs</h4>
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="{{ path('admin_dashboard_index') }}">ChirurgieMed</a></li>
                            <li class="breadcrumb-item active">Utilisateurs</li>
                        </ol>
                    </div>
                </div>
            </div>
            <!-- end row -->

            <div class="page-content-wrapper">
                <div class="row">
                    <div class="col-12">
                        <div class="card m-b-20">
                            <div class="card-body">

                                <h4 class="mt-0 header-title">Liste des utilisateurs</h4>

                                <table id="datatable-buttons" class="table table-striped dt-responsive table-hover nowrap"  style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Avatar</th>
                                                {#<th>Civilité</th>#}
                                                {# <th>Prénom</th>#}
                                            <th>Nom</th>
                                            <th>E-mail</th>
                                                {# <th>Hash</th>#}
                                                {# <th>Introduction</th>#}
                                                {# <th>Slug</th>#}
                                                {#<th>Profession</th>#}
                                            <th>Société</th>
                                                {# <th>Adresse</th>#}
                                            <th>Ville</th>
                                                {# <th>Code Postal</th>#}
                                            <th>Tel</th>
                                            <th>GSM</th>
                                            <th>Actif</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for user in users %}
                                            <tr>
                                                <td>{{ user.id }}</td>
                                                {#<td>{{ user.picture }}</td>#}
                                                <td><img src="{{ asset('uploads/images/users/' ~ user.picture) }}" /> </td>
                                                    {#<td>{{ user.civilite }}</td>#}
                                                    {# <td>{{ user.firstName }}</td>#}
                                                    {# <td>{{ user.lastName }}</td>#}
                                                <td>{{ user.fullName }}</td>
                                                <td>{{ user.email }}</td>
                                                {# <td>{{ user.hash }}</td>#}
                                                {# <td>{{ user.introduction }}</td>#}
                                                {# <td>{{ user.slug }}</td>#}
                                                {#<td>{{ user.job }}</td>#}
                                                <td>{{ user.company }}</td>
                                                {# <td>{{ user.adresse }}</td>#}
                                                <td>{{ user.ville }}</td>
                                                {# <td>{{ user.codePostal }}</td>#}
                                                {# <td>{{ user.enabled ? 'Yes' : 'No' }}</td> #}
                                                <td>{{ user.tel }}</td>
                                                <td>{{ user.gsm }}</td>
                                                <td>
                                                    <input type="checkbox" id="switch{{ user.id }}" switch="success" disabled="true" {{ user.enabled ? 'checked' : 'unchecked' }} />
                                                    <label for="switch{{ user.id }}" data-on-label="" data-off-label=""></label>
                                                </td>
                                                <td>
                                                    <a href="{{ path('admin_user_show', {'id': user.id}) }}" class="btn btn-primary mr-2" data-toggle="tooltip" data-placement="top" title data-original-title="Détails" ><i class="fas fa-eye"></i> </a>
                                                    <a href="{{ path('admin_user_edit', {'id': user.id}) }}" class="btn btn-primary mr-2" data-toggle="tooltip" data-placement="top" title data-original-title="Modifier"><i class="fas fa-pencil-alt"></i> </a>
                                                </td>
                                            </tr>
                                        {% else %}
                                            <tr>
                                                <td colspan="18">Aucun utilisateur n'est enregistré</td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div> <!-- end col -->
                </div> <!-- end row -->
            </div>
            <!-- end page content-->
            <div class="form-inline align-items-lg-center my-3">
                <a class="btn btn-success mr-3" href="{{ path('admin_user_new') }}"><i class="fas fa-plus"></i> Ajouter un utilisateur</a>
            </div>           
        </div> <!-- container-fluid -->
    </div> <!-- content -->

{% endblock %}
